<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Unicesumar - Lista de Usuários</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Usuários</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length > 0) { %>
                    <% users.forEach(function(user) { %>
                        <tr>
                            <td><%= user.id_usuario %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>                                                      
                            <td>
                                <a href="/users/register?id=<%= user.id_usuario %>&name=<%= user.name %>&email=<%= user.email %>&role=<%= user.papel %>&active=<%= user.ativo %>" class="btn btn-danger btn-sm" class="btn btn-danger btn-sm">Editar</a>
                                <form action="/users/delete/<%= user.id_usuario %>" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Excluir</button>                                    
                                </form>                                 
                            </td>
                            <td><%= user.created_at %></td> <!--  Ajuste se a coluna não existir  -->
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">Nenhum usuário cadastrado</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/users/register" class="btn btn-primary mt-3">Retornar</a>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
